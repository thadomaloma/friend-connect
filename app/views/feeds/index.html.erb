<header class="header clearfix">
<h1>Feeds</h1>
</header>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
    <div class="feed">
      <tr>
        <% if feed.image && feed.image.url %>
          <td><%= image_tag feed.image.url, class: "img"  %></td>
        <% end %>
        <td><%= feed.user.name %></td>
        <td><%= feed.content %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to "Edit", edit_feed_path(feed.id), data: { confirm: 'Can I really edit it?' } %></td>
        <td><%= button_to 'Delete', feed_path(feed.id), method: :delete ,data: { confirm: 'Are you sure?'} %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
